<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
      xmlns:widgets="utils/widgets">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.drawerContent>
            <widgets:side-drawer />
		</drawer:RadSideDrawer.drawerContent>
        <drawer:RadSideDrawer.mainContent>
            <ScrollView>
                <StackLayout width="100%">

                    <StackLayout class="booking-account">
                        <StackLayout>
                            <Label text="Clients" class="booking-section-header" />
                            <Label class="booking-section-divider" />
                        </StackLayout>
                        <StackLayout class="booking-input-row">
                            <Label text="Require appointment information" class="booking-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Yes, client must select date/time/location" class="booking-textfield" />
                        </StackLayout>
                    </StackLayout>
                    
                    <StackLayout class="booking-account">
                        <StackLayout>
                            <Label text="Appointments" class="booking-section-header" />
                            <Label class="booking-section-divider" />
                        </StackLayout>
                        <StackLayout class="booking-input-row">
                            <Label text="Minimum length" class="booking-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="None" class="booking-textfield" />
                        </StackLayout>
						<StackLayout class="booking-input-row">
                            <Label text="Default text for appointment notes" class="booking-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Please enter your address here" class="booking-textfield" />
                        </StackLayout>
                        <StackLayout class="booking-input-row">
                            <Label text="Location I offer" class="booking-label" />
                            <WrapLayout class="settings-all-row" section="screening" tap="onTap">
                                <image src="~/images/ic_check_box_outline_blank_white.png" class="ionicons-icon settings-section-link-icon" width="30" />
                                <Label text="Incalls" class="settings-section-link-label" />
                            </WrapLayout>
                            <WrapLayout class="settings-all-row" section="screening" tap="onTap">
                                <image src="~/images/ic_check_box_white.png" class="ionicons-icon settings-section-link-icon" width="30" />
                                <Label text="Outcalls" class="settings-section-link-label" />
                            </WrapLayout>
                        </StackLayout>
                    </StackLayout>
                    
                </StackLayout>
            </ScrollView>
        </drawer:RadSideDrawer.mainContent>
	</drawer:RadSideDrawer>
</Page>