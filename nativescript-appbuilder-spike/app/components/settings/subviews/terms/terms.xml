<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
      xmlns:widgets="utils/widgets">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.drawerContent>
            <widgets:side-drawer />
		</drawer:RadSideDrawer.drawerContent>
        <drawer:RadSideDrawer.mainContent>
            <ScrollView>
                <StackLayout width="100%">

                    <StackLayout horizontalAlignment="center" class="settings-head">
                        <Label style="background-image: url('~/images/placeholder/temp-client-thumb.jpg');" class="settings-thumbnail" />
                    </StackLayout>

                    <StackLayout class="settings-account">
                        <StackLayout>
                            <Label text="My Account" class="settings-section-header" />
                            <Label class="settings-section-divider" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Username" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="jennycandy07" class="settings-textfield" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Name" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Jenny Mathers" class="settings-textfield" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Email" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="jennycandy857@gmail.com" class="settings-textfield" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Mobile Number" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="123-456-7890" class="settings-textfield" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Password" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="*****" class="settings-textfield" />
                        </StackLayout>
                        <StackLayout class="settings-input-row">
                            <Label text="Timezone" class="settings-label" />
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="GMT-05:00 Eastern Time (EST)" class="settings-textfield" />
                        </StackLayout>
                    </StackLayout>
                    
                </StackLayout>
            </ScrollView>
        </drawer:RadSideDrawer.mainContent>
	</drawer:RadSideDrawer>
</Page>