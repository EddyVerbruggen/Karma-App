<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:widgets="utils/widgets"
      loaded="onLoaded"
      xmlns:FAB="nativescript-floatingactionbutton">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <ScrollView>
        <grid-layout rows="auto,*">
            <StackLayout row="0" class="subsettings-wrapper">
                <StackLayout class="subsettings-row">
                    <Label text="Display" class="subsettings-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Yes" class="subsettings-textfield" />
                </StackLayout>
                <StackLayout class="subsettings-row">
                    <Label text="Text" class="subsettings-label" />
                    <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="You are atleast 18 years of age and you enter into legally binding contract under aplicable law." class="subsettings-textfield" />
                </StackLayout>
            </StackLayout>
            <StackLayout row="1" class="subsettings-wrapper">
                <StackLayout>
                    <Label text="Terms" class="subsettings-header" />
                    <Label class="subsettings-divider" />
                </StackLayout>
                <StackLayout class="subsettings-row" id="termsList">
                    <Label text="The client must accept the following" class="subsettings-label" />
                    <Repeater items="{{terms}}">
                        <Repeater.itemTemplate>
                            <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{def}}" class="subsettings-textfield" />
                        </Repeater.itemTemplate>
                    </Repeater>						
                </StackLayout>
            </StackLayout>
            <FAB:fab tap="fabTap" row="1" icon="~/images/ic_add_white.png" rippleColor="#f1f1f1" class="fab-button" hideOnSwipeOfView="termsList" />

        </grid-layout>
    </ScrollView>
</Page>