<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:widgets="utils/widgets"
      xmlns:FAB="nativescript-floatingactionbutton"
      loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <ScrollView>
        <StackLayout width="100%">
            <StackLayout class="services-input-row" tap="edit">
                <Label keyboardType="text" text="GFE" class="services-textfield"  textWrap="true" />
            </StackLayout>
            <StackLayout class="services-input-row" tap="edit">
                <Label keyboardType="text" text="Dinner and Movie" class="services-textfield" tap="edit" textWrap="true" />
            </StackLayout>
            <StackLayout class="services-input-row" tap="edit">
                <Label keyboardType="text" text="PSE" class="services-textfield" tap="edit" textWrap="true" />
            </StackLayout>
            <StackLayout class="services-input-row" tap="edit">
                <Label keyboardType="text" text="Travel Companion" class="services-textfield" tap="edit" textWrap="true" />
            </StackLayout>            
            <FAB:fab tap="fabTap" row="1" icon="~/images/ic_add_white.png" rippleColor="#f1f1f1" class="fab-button" />
        </StackLayout>
    </ScrollView>
</Page>