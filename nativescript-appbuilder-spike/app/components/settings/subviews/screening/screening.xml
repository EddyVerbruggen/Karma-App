<Page navigatedTo="onNavigatedTo"
      xmlns:widgets="utils/widgets">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <ScrollView>
        <StackLayout width="100%">
            <StackLayout class="screening-account">
                <StackLayout>
                    <Label text="References" class="screening-section-header" />
                    <Label class="screening-section-divider" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Require client references from other companions" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_references_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_references" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="References required to have an established website" class="screening-label" />
                    <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_reference_website_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_reference_website" />
                </StackLayout>
            </StackLayout>

            <StackLayout class="screening-account">
                <StackLayout>
                    <Label text="Client Information" class="screening-section-header" />
                    <Label class="screening-section-divider" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Require client to upload photo(s)" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_client_photos_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_client_photos" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Client's last name" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_last_name_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_last_name" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Year of birth" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_birth_date_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_birth_date" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="City/state of residence" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_residence_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_residence" />
                </StackLayout>
            </StackLayout>

            <StackLayout class="screening-account">
                <StackLayout>
                    <Label text="Work" class="screening-section-header" />
                    <Label class="screening-section-divider" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Require work/employment information" class="screening-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{flag_screening_work_information_label}}" class="screening-textfield" tap="onTapDialog" setting="flag_screening_work_information" />
                </StackLayout>
            </StackLayout>

            <StackLayout class="screening-account">
                <StackLayout>
                    <Label text="Skipping" class="screening-section-header" />
                    <Label class="screening-section-divider" />
                </StackLayout>
                <StackLayout class="screening-input-row">
                    <Label text="Require work/employment information" class="screening-label" />
                </StackLayout>
                <WrapLayout class="screening-all-row" tap="onToggle" setting="flag_screening_skip" checkboxConst="SKIP_SCREENING_USER_WHITELIST">
                    <image src="" id="SKIP_SCREENING_USER_WHITELIST" class="" width="30" />
                    <Label text="Screened and approved by you in the past, even if they are not on your white-list" class="screening-section-link-label" />
                </WrapLayout>
                <WrapLayout class="screening-all-row" tap="onToggle" setting="flag_screening_skip" checkboxConst="SKIP_SCREENING_USER_APPROVED_BOOKING">
                    <image src="" id="SKIP_SCREENING_USER_APPROVED_BOOKING" class="" width="30" />
                    <Label text="On any other companion's white-list" class="screening-section-link-label" />
                </WrapLayout>
                <WrapLayout class="screening-all-row" tap="onToggle" setting="flag_screening_skip" checkboxConst="SKIP_SCREENING_ANY_APPROVED_BOOKING">
                    <image src="" id="SKIP_SCREENING_ANY_APPROVED_BOOKING" class="" width="30" />
                    <Label text="Screeened and approved by other companions in the past, even if they are not on their white-list" class="screening-section-link-label" />
                </WrapLayout>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</Page>
