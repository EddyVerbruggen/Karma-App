<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
      xmlns:widgets="utils/widgets"
      loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.drawerContent>
            <widgets:side-drawer />
		</drawer:RadSideDrawer.drawerContent>
        <drawer:RadSideDrawer.mainContent>
            <ScrollView>
                <StackLayout width="100%">

                    <StackLayout class="landing-account">
                        <StackLayout>
                            <Label text="Text" class="landing-section-header" />
                            <Label class="landing-section-divider" />
                        </StackLayout>
                        <StackLayout class="landing-input-row">
                            <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Welcome to my page, Iwould really like to meet you. So please don't forget to book with me." class="landing-textfield" tap="edit" />
                        </StackLayout>
                    </StackLayout>
                    
                    <StackLayout class="landing-account">
                        <StackLayout>
                            <Label text="Background Image" class="landing-section-header" />
                            <Label class="landing-section-divider" />
                        </StackLayout>
                        <StackLayout class="landing-input-row" >
                            <image src="~/images/pattern-triangle.png" class="landing-bg-image" />
                        </StackLayout>
                        <WrapLayout class="landing-all-row">
                            <Button text="Delete" class="send-message-button" width="50%" tap="delete" />
                            <Button text="Upload" class="send-message-button" width="50%" tap="upload" />
                        </WrapLayout>
                    </StackLayout>

                </StackLayout>
            </ScrollView>
        </drawer:RadSideDrawer.mainContent>
	</drawer:RadSideDrawer>
</Page>