<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:widgets="utils/widgets"
      loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <ScrollView>
        <StackLayout width="100%">
            <StackLayout class="subsettings-wrapper">
                <StackLayout>
                    <Label text="Welcome Text" class="subsettings-header" />
                    <Label class="subsettings-divider" />
                </StackLayout>
                <StackLayout class="subsettings-row">
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="Welcome to my page, Iwould really like to meet you. So please don't forget to book with me." class="subsettings-textfield" tap="edit" />
                </StackLayout>
            </StackLayout>
            <StackLayout class="subsettings-wrapper">
                <StackLayout>
                    <Label text="Background Image" class="subsettings-header" />
                    <Label class="subsettings-divider" />
                </StackLayout>
                <StackLayout class="subsettings-row" >
                    <image src="~/images/pattern-triangle.png" class="subsettings-bg-image" />
                </StackLayout>
                <WrapLayout class="subsettings-all-row">
                    <Button text="Delete" class="send-message-button" width="50%" tap="delete" />
                    <Button text="Upload" class="send-message-button" width="50%" tap="upload" />
                </WrapLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>