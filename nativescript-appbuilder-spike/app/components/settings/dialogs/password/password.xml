<Page xmlns="http://www.nativescript.org/tns.xsd" 
      showingModally="onLoaded">
    <StackLayout id="passwordModal" width="100%" height="auto" horizontalAlignment="center" verticalAlignment="center" backgroundColor="white" opacity="1">
        <WrapLayout class="password-header">
            <label text="Verify Account" />
        </WrapLayout>
        <WrapLayout class="password-sub-header">
            <label class="password-textlabel" text="For security reasons, please enter your password to continue." />
        </WrapLayout>
        <StackLayout class="popup-wrapper">
            <StackLayout class="password-row">
                <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" hint="Current Password" secure="true" editable="true" id="password" />
            </StackLayout>
        </StackLayout>
        <wrap-layout class="footer-buttons">
            <label class="footer-button-cancel" text="CANCEL" tap="dismiss" />
            <label class="footer-button-submit" text="SUBMIT" tap="submit" />
        </wrap-layout>

    </StackLayout>
</Page>