<GridLayout rows="*" columns="*">
    <ScrollView>
        <grid-layout rows="auto,*" id="gridview">
           
            <StackLayout class="">
                <WrapLayout class="ticket-row">
                    <TextField
                        id="username"
                        text="{{ user.username }}"
                        hint="Username"
                        keyboardType="text"
                        autocorrect="false"
                        autocapitalizationType="none"
                        class="help-ticket-input" />
                </WrapLayout>
                
                <WrapLayout class="ticket-row">
                    <TextField
                        id="email"
                        text="{{ user.email }}"
                        hint="Email"
                        keyboardType="email"
                        autocorrect="false"
                        autocapitalizationType="none"
                        class="help-ticket-input" />
                </WrapLayout>
                
                <WrapLayout class="ticket-row">
                    <TextField
                        id="message"
                        text="{{ user.message }}"
                        hint="Enter your message..."
                        keyboardType="text"
                        autocorrect="true"
                        autocapitalizationType="none"
                        class="help-ticket-input-area" />
                </WrapLayout>

                <StackLayout class="ticket-btn-row">
                    <button class="help-ticket-btn-send" text="Send" />
                </StackLayout>
            </StackLayout>    
                    
        </grid-layout>
    </ScrollView>
</GridLayout>