<GridLayout rows="*" columns="*">
    <ScrollView>
        <grid-layout rows="auto,*" id="gridview">
            <StackLayout>
                <button text="July 23 - August 3" class="traffic-date-selection" />

                <Repeater items="{{referrers}}">
                    <Repeater.itemTemplate>
                        <StackLayout class="visitors-account" orientation="horizontal" section="{{id}}" tap="toggle">
                            <Stack-layout class="visitors-referrer-toggle" visibility="{{aptlist.length > 0 ? 'visible' : 'collapse' }}">
                                <image src="~/images/ic_keyboard_arrow_down.png" id="{{id+'arr'}}" class="visitors-referrer-toggle-icon" width="20" />
                            </Stack-layout>
                            <StackLayout class="visitors-referrer-body">
                                <wrap-layout class="visitors-account">
                                    <Label text="{{url}}" class="visitors-traffic-address" />
                                </wrap-layout>
                                <wrap-layout class="visitors-account">
                                    <stack-layout class="visitors-referrer-col">
                                        <Label text="Total Visits" class="visitors-referrer-title" />
                                        <Label text="{{visits}}" class="visitors-referrer-value" />
                                    </stack-layout>
                                    <stack-layout class="visitors-referrer-col">
                                        <Label text="Average Time" class="visitors-referrer-title" />
                                        <Label text="{{avgtime}}" class="visitors-referrer-value" />
                                    </stack-layout>
                                    <stack-layout class="visitors-referrer-col">
                                        <Label text="Clients" class="visitors-referrer-title" />
                                        <Label text="{{clients}}" class="visitors-referrer-value" />
                                    </stack-layout>
                                    <stack-layout class="visitors-referrer-col">
                                        <Label text="Appointments" class="visitors-referrer-title" />
                                        <Label text="{{appointments}}" class="visitors-referrer-value" />
                                    </stack-layout>
                                </wrap-layout>
                                <StackLayout visibility="collapse" id="{{id}}">
                                    
                                    <Repeater items="{{aptlist}}">
                                        <Repeater.itemTemplate>
                                            <wrap-layout class="visitors-referrer-user-list">
                                                <label text="{{name}}" class="visitors-referrer-name" />
                                                <label text="{{status}}" class="visitors-referrer-status" />
                                                <label text="{{appointment + ' Appointment'}}" class="visitors-referrer-appointment" />
                                            </wrap-layout>
                                        </Repeater.itemTemplate>
                                    </Repeater>
                                    
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Repeater.itemTemplate>
                </Repeater>
                
            </StackLayout>
        </grid-layout>
    </ScrollView>
</GridLayout>