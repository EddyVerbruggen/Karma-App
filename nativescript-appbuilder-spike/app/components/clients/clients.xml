<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <StackLayout class="client-rows">
        <!-- Loop through all clients and display each one -->
        <ListView items="{{clientsList}}">
            <ListView.itemTemplate>
                <!-- Each row of clients. create different classes for the row depending on their status -->
                <StackLayout orientation="horizontal" class="client-row">           
                    <StackLayout width="20%" verticalAlignment="center">
                        <Label style="background-image: url('~/images/placeholder/temp-client-thumb.jpg');" class="client-row-thumbnail" />
                    </StackLayout>
                    <StackLayout width="60%" verticalAlignment="center">
                        <Label text="{{client_name}}" class="client-row-name" />
                    </StackLayout>            
                    <StackLayout width="20%" verticalAlignment="center">
                        <Label text="{{status_text}}" class="row-client-status" />
                    </StackLayout>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <ActivityIndicator busy="{{ isLoading }}" />
    </StackLayout>
</Page>