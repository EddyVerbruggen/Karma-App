        <StackLayout orientation="horizontal" row="2" col="0">
            <StackLayout width="33%" status="confirmed">
                <Label class="ionicons-icon" text="Status" />
            </StackLayout>
            <StackLayout width="33%" status="pending">
                <Label class="ionicons-icon appointment-filter-icon" text="Tags" />
            </StackLayout>
            <StackLayout width="33%" status="cancelled">
                <Label class="ionicons-icon appointment-filter-icon" text="Sort By" />
            </StackLayout>
        </StackLayout>
    </GridLayout>
</Page>