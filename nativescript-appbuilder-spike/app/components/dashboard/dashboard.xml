<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>
    <ScrollView>
        <StackLayout>            
            <StackLayout class="dashboard-head">
                <Label text="What's New (Today)" class="dashboard-head-title" />
                <StackLayout orientation="horizontal">                    
                    <StackLayout width="33%">
                        <Label text="3" class="stats-number" />
                        <Label text="Appointments" class="stats-label" />
                    </StackLayout>
                    <StackLayout width="33%">
                        <Label text="21" class="stats-number" />
                        <Label text="Clients" class="stats-label" />
                    </StackLayout>
                    <StackLayout width="33%">
                        <Label text="326" class="stats-number" />
                        <Label text="Visitors" class="stats-label" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>

            <StackLayout>
            <Label text="TODAY" class="today-section-title" />
            
            <!-- Each unit in the day -->
            <StackLayout orientation="horizontal" class="booking-row">
                <StackLayout width="25%">
                    <!-- example of an icon. Add class ionicons-icon, then in text field, use the escaped HTML code from this page: http://ionicons.com/cheatsheet.html -->
                    <Label text="2:00PM &#xf35a;" class="ionicons-icon booking-time" />
                    <Label text="1 HOUR" class="booking-length" />
                </StackLayout>
                
                <!-- Divider -->
                <StackLayout width="15%">
                </StackLayout>
                
                <StackLayout width="45%">
                    <Label text="John Smith" class="booking-client-name" />
                    <Label text="Incall" class="booking-location" />
                </StackLayout>
                
                <StackLayout width="15%">
                    <Label text="$80" />
                </StackLayout>
        	</StackLayout>
        </StackLayout>

        
        <!-- Top referrers: try this -->
        
        </StackLayout>
    </ScrollView>
</Page>