<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
      xmlns:widgets="utils/widgets"
      loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.drawerContent>
            <widgets:side-drawer />
		</drawer:RadSideDrawer.drawerContent>
        <drawer:RadSideDrawer.mainContent>
            <TabView id="availability-tabs">
                <TabView.items>
                    <TabViewItem title="Calander" xmlns:Calander="components/availability/tabs/calander">
                        <TabViewItem.view>
                            <Calander:calander />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="Standard Hours" xmlns:Standard="components/availability/tabs/standard">
                        <TabViewItem.view>
                            <Standard:standard />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="{{'Pending (' + 1 + ')'}}" xmlns:Travel="components/availability/tabs/travel">
                        <TabViewItem.view>
                            <Travel:travel />
                        </TabViewItem.view>
                    </TabViewItem>
                </TabView.items>
            </TabView>
        </drawer:RadSideDrawer.mainContent>
	</drawer:RadSideDrawer>
</Page>