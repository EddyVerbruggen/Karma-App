<GridLayout rows="*" columns="*">
    <ScrollView>
        <grid-layout rows="auto,*" id="gridview">
            <Repeater items="{{weekdays}}">
                <Repeater.itemTemplate>

                    <StackLayout>
                        <WrapLayout class="standard-accordian-header" tap="toggle" section="{{day}}">
                            <image src="~/images/ic_keyboard_arrow_down.png" class="ionicons-icon availability-standard-section-link-icon" />
                            <Label text="{{day}}" class="standard-accordian-header-label" />
                        </WrapLayout>
                        
                        <StackLayout class="standard-account" visibility="{{visibility}}" id="{{day}}">
                            <StackLayout class="standard-accordion-input-row">
                                <Label text="Availability" class="standard-accordion-label" />
                                <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{availability}}" class="standard-accordion-textfield" tap="selectTime" />
                            </StackLayout>
                            <StackLayout class="standard-accordion-input-row">
                                <Label text="Location" class="standard-accordion-label" />
                                <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{location}}" class="standard-accordion-textfield" />
                            </StackLayout>
                            <WrapLayout class="standard-accordion-all-row" section="screening" tap="onTap">
                                <image src="~/images/ic_check_box_outline_blank_white.png" class="ionicons-icon standard-accordion-section-link-icon" width="30" />
                                <Label text="Unavailable all day" class="standard-accordion-section-link-label" />
                            </WrapLayout>
                        </StackLayout>
					</StackLayout>    
                    
                </Repeater.itemTemplate>
            </Repeater>	 
        </grid-layout>
    </ScrollView>
</GridLayout>