<GridLayout rows="*" columns="*">
    <ScrollView>
        <grid-layout rows="auto,*" id="gridview">
            <Repeater items="{{travel}}">
                <Repeater.itemTemplate>

                    <StackLayout>
                        <WrapLayout class="travel-accordian-header" tap="toggle" section="{{city}}">
                            <image src="~/images/ic_keyboard_arrow_down.png" class="ionicons-icon availability-travel-section-link-icon" />
                            <Label text="{{city}}" class="travel-accordian-header-label" />
                            <Label text="Delete" class="travel-accordian-header-delete" tap="delete" />
                        </WrapLayout>
                        
                        <StackLayout class="travel-account" visibility="{{visibility}}" id="{{city}}">
                            <StackLayout class="travel-accordion-input-row">
                                <Label text="Date" class="travel-accordion-label" />
                                <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{date}}" class="travel-accordion-textfield" tap="selectDate" />
                            </StackLayout>
                            <StackLayout class="travel-accordion-input-row">
                                <Label text="Location" class="travel-accordion-label" />
                                <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{location}}" class="travel-accordion-textfield" />
                            </StackLayout>
                            <StackLayout class="travel-accordion-input-row">
                                <Label text="Availability" class="travel-accordion-label" />
                                <TextView keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" text="{{availability}}" class="travel-accordion-textfield" tap="selectTime" />
                            </StackLayout>
                        </StackLayout>
					</StackLayout>    
                    
                </Repeater.itemTemplate>
            </Repeater>	 
        </grid-layout>
    </ScrollView>
</GridLayout>