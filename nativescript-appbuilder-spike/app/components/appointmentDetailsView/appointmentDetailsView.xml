<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="onLoaded">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <TabView>
        <TabView.items>
            <!-- Display a tab, and pull contents from external file -->
            <TabViewItem title="Details" xmlns:DetailsView="components/appointmentDetailsView/tabs/detailsView">
                <TabViewItem.view>
                    <DetailsView:detailsView />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="History" xmlns:HistoryView="components/appointmentDetailsView/tabs/historyView">
                <TabViewItem.view>
                    <HistoryView:historyView />
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>