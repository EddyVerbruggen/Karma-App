<GridLayout rows="*, 50" columns="*">
    <ScrollView row="0" col="0">  
        <StackLayout>

            <StackLayout class="appointment-details-head" orientation="horizontal">
                
                    <StackLayout verticalAlignment="center">
                        <Label style="background-image: url('~/images/placeholder/temp-client-thumb.jpg');" class="client-thumbnail" />
                    </StackLayout>
                    <StackLayout verticalAlignment="center">
                        <WrapLayout>
                            <Label text="{{appointmentDetails.name}}" class="client-name" />
                            <Label text="{{appointmentDetails.client_status_text}}" class="client-status client-status-approved" horizontalAlignment="left" />
                        </WrapLayout>
                        <Label text="{{appointmentDetails.phone}}" class="client-phone" />
                        <Label text="{{appointmentDetails.email}}" class="client-email" />                        
                    </StackLayout>
                
            </StackLayout>            
            
            <StackLayout class="appointment-details">                
                <StackLayout class="appointment-input-row">
                    <Label text="Date" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="{{appointmentDetails.date}}" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Time" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="{{appointmentDetails.time}}" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Length" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="{{appointmentDetails.length}}" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Location" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="{{appointmentDetails.location}}" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Status" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="{{appointmentDetails.status_text}}" editable="false" />
                </StackLayout>
            </StackLayout>            
        </StackLayout>
    </ScrollView>

    <StackLayout orientation="horizontal" row="1" col="0">
        <StackLayout width="50%">
            <Button text="Confirm" class="accept-save-button" width="100%" />
        </StackLayout>
        <StackLayout width="35%">
            <Button text="Cancel" class="cancel-button" width="100%" />
        </StackLayout>
        <StackLayout width="15%">
            <Button text="&#xf4c4;" class="ionicons-icon delete-button" width="100%" />
        </StackLayout>
    </StackLayout>    
</GridLayout>