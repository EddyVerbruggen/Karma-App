    <StackLayout orientation="horizontal" row="1" col="0" class="appointment-options">
        <StackLayout width="40%">
            <Label text="Confirm" class="accept-save-button" tap="confirm" />
        </StackLayout>
        <StackLayout width="40%">
            <Label text="Cancel" class="cancel-button" wtap="cancel" />
        </StackLayout>
        <StackLayout width="20%">
            <Label text="&#xf4c4;" class="ionicons-icon delete-button" tap="delete" />
        </StackLayout>
    </StackLayout>    
