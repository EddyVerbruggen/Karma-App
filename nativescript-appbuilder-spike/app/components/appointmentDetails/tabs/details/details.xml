<GridLayout rows="*, 50" columns="*">
    <ScrollView row="0" col="0">  
        <StackLayout>

            <StackLayout class="appointment-details-head" orientation="horizontal">
                
                    <StackLayout verticalAlignment="center">
                        <Label style="background-image: url('~/images/placeholder/temp-client-thumb.jpg');" class="client-thumbnail" />
                    </StackLayout>
                    <StackLayout verticalAlignment="center">
                        <Label text="Clayton Fox" class="client-name" />
                        <Label text="(516) 618-8884" class="client-phone" />
                        <Label text="claytonfox@gmail.com" class="client-email" />
                        <Label text="Approved" class="client-status client-status-verified" horizontalAlignment="left" />
                    </StackLayout>
                
            </StackLayout>            
            
            <StackLayout class="appointment-details">                
                <StackLayout class="appointment-input-row">
                    <Label text="Date" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="Sunday, June 26, 2016" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Time" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="3:30 PM (PST)" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Length" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="2 Hours" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Location" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="Outcall - Hilton Honors, Room 956" editable="false" />
                </StackLayout>
                <StackLayout class="appointment-input-row">
                    <Label text="Status" class="appointment-label" />
                    <TextField class="appointment-textfield" keyboardType="text" autocorrect="false" autocapitalizationType="none" text="Pending - Waiting for you to Accept or Cancel" editable="false" />
                </StackLayout>
            </StackLayout>            
        </StackLayout>
    </ScrollView>

    <StackLayout orientation="horizontal" row="1" col="0">
        <StackLayout width="50%">
            <Button text="Accept" class="accept-save-button" width="100%" />
        </StackLayout>
        <StackLayout width="35%">
            <Button text="Cancel" class="cancel-button" width="100%" />
        </StackLayout>
        <StackLayout width="15%">
            <Button text="&#xf4c4;" class="ionicons-icon delete-button" width="100%" />
        </StackLayout>
    </StackLayout>    
</GridLayout>