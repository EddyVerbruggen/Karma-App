<ScrollView loaded="onLoaded">
	<StackLayout>
        <StackLayout class="client-profile-top">
            <Image src="~/images/placeholder/temp-client-thumb.jpg" class="client-profile-top-thumbnail" />
            <Label text="{{clientDetails.Result.screening.status_text}}" class="client-profile-top-status" />
        </StackLayout>

        <!-- Summary stats -->
        <StackLayout orientation="horizontal">
            <StackLayout width="33%">
                <Label class="summary-stat-number" text="{{clientDetails.Result.screening.karmascore}}" />
                <Label class="summary-stat-label" text="karmascore" />
            </StackLayout>
            <StackLayout width="33%">
                <Label class="summary-stat-number" text="{{clientDetails.Result.screening.num_bookings}}" />
                <Label class="summary-stat-label" text="appointments" />
            </StackLayout>
            <StackLayout width="34%">
                <Label class="summary-stat-number" text="{{clientDetails.Result.screening.num_noshows}}" />
                <Label class="summary-stat-label" text="no-shows" />
            </StackLayout>
        </StackLayout>

        <!-- Pending appointment(s) -->
        <Repeater items="{{clientDetails.Result.bookings}}">
            <Repeater.itemsLayout>
                <StackLayout />
            </Repeater.itemsLayout>
            <Repeater.itemTemplate>
                <Button text="{{'Appointment: ' + date}}" class="pending-appointment-button" />
            </Repeater.itemTemplate>
        </Repeater>


        <Label class="info-box-title" text="Personal" />
        <StackLayout class="info-table">
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Name:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.name}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />            
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Residence:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.residence}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Age:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.age}}" />
                </StackLayout>                
            </StackLayout>           
        </StackLayout>

        <Label class="info-box-title" text="Contact" />
        <StackLayout class="info-table">
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Email:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client.email}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />         
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Phone:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client.phone}}" />
                </StackLayout>              
            </StackLayout>           
        </StackLayout>

        <Label class="info-box-title" text="Usernames" />
        <StackLayout class="info-table">
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="TER:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.ter_username}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />            
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="DateCheck:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.datecheck_username}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="P411:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client_profile.p411_username}}" />
                </StackLayout>                
            </StackLayout>           
        </StackLayout> 

        <Label class="info-box-title" text="Signup Details" />
        <StackLayout class="info-table">
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Date:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{ clientDetails.Result.client.created_formatted }}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />           
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="Location:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client.location_signup}}" />
                </StackLayout>                
            </StackLayout>            
            <Label class="info-table-divider" />
            <StackLayout orientation="horizontal" class="info-table-row">
                <StackLayout class="info-table-label">
                    <Label class="" text="IP:" />
                </StackLayout>
                <StackLayout class="info-table-text">
                    <Label text="{{clientDetails.Result.client.ip_signup}}" />
                    <Label text="{{clientDetails.Result.client.host_signup, ' (' + clientDetails.Result.client.host_signup + ')'}}" />
                </StackLayout>                
            </StackLayout>           
        </StackLayout>      

        <StackLayout class="info-box">
            <Label class="info-box-title" text="TAGS" />
            <Repeater items="{{clientDetails.Result.tags}}">
                <Repeater.itemsLayout>
                    <StackLayout orientation="horizontal" />
                </Repeater.itemsLayout>
                <Repeater.itemTemplate>
                    <Button text="{{name}}" />
                </Repeater.itemTemplate>
            </Repeater>
        </StackLayout>

	</StackLayout>
</ScrollView>