<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
      xmlns:widgets="utils/widgets"
      loaded="onLoaded">
    <!-- Actionbar with back button -->
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.drawerContent>
            <widgets:side-drawer />
		</drawer:RadSideDrawer.drawerContent>
        <drawer:RadSideDrawer.mainContent>
            <TabView>
                <TabView.items>
                    <!-- Display a tab, and pull contents from external file -->
                    <TabViewItem title="Info" xmlns:PersonalDetails="components/clientDetails/tabs/personalDetails">
                        <TabViewItem.view>
                            <PersonalDetails:personalDetails />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="Screening" xmlns:Screening="components/clientDetails/tabs/screening">
                        <TabViewItem.view>
                            <Screening:screening />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="References" xmlns:References="components/clientDetails/tabs/references">
                        <TabViewItem.view>
                            <References:references />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="Background" xmlns:BackgroundCheck="components/clientDetails/tabs/backgroundCheck">
                        <TabViewItem.view>
                            <BackgroundCheck:backgroundCheck />
                        </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="History" xmlns:History="components/clientDetails/tabs/history">
                        <TabViewItem.view>
                            <History:history />
                        </TabViewItem.view>
                    </TabViewItem>
                </TabView.items>
            </TabView>
        </drawer:RadSideDrawer.mainContent>
	</drawer:RadSideDrawer>
</Page>