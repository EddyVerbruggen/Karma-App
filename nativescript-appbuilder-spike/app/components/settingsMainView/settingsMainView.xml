<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets">
    <Page.actionBar>
    	<widgets:action-bar />
	</Page.actionBar>
    <ScrollView>
        <StackLayout width="100%">
            
            <StackLayout horizontalAlignment="center" class="settings-top">
                <Image src="~/images/placeholder/temp-client-thumb.jpg" class="settings-thumb" />
            </StackLayout>       

            <StackLayout class="settings-account">
                <StackLayout>
                    <Label text="My Account" class="settings-section-header" />
                    <Label class="settings-section-divider" />
                </StackLayout>
                <StackLayout class="settings-input-row">
                    <Label text="Username" class="settings-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" />
                </StackLayout>
                <StackLayout class="settings-input-row">
                    <Label text="Name" class="settings-label" />
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" />
                </StackLayout>
            </StackLayout>
            
            <StackLayout class="settings-all">
                <StackLayout>
                    <Label text="All Settings" class="settings-section-header" />
                    <Label class="settings-section-divider" />
                </StackLayout>
                <StackLayout>
                    <StackLayout orientation="horizontal" verticalAlignment="center">
                    	<Label text="&#xf101;" class="ionicons-icon settings-section-link-icon" width="10%" />
                        <Label text="Services" class="settings-section-link-label" width="85%" />
                        <Label text="&#xf3d1;" class="ionicons-icon settings-section-link-arrow" width="5%" horizontalAlignment="right" />
                    </StackLayout>
                    <Label class="settings-all-divider" />
                    <StackLayout orientation="horizontal" verticalAlignment="center">
                    	<Label text="&#xf101;" class="ionicons-icon settings-section-link-icon" width="10%" />
                        <Label text="Notifications" class="settings-section-link-label" width="85%" />
                        <Label text="&#xf3d1;" class="ionicons-icon settings-section-link-arrow" width="5%" horizontalAlignment="right" />
                    </StackLayout>
                    <Label class="settings-all-divider" />
                    <StackLayout orientation="horizontal" verticalAlignment="center">
                    	<Label text="&#xf101;" class="ionicons-icon settings-section-link-icon" width="10%" />
                        <Label text="Screening" class="settings-section-link-label" width="85%" />
                        <Label text="&#xf3d1;" class="ionicons-icon settings-section-link-arrow" width="5%" horizontalAlignment="right" />
                    </StackLayout>
                    <Label class="settings-all-divider" />
                    <StackLayout orientation="horizontal" verticalAlignment="center">
                    	<Label text="&#xf101;" class="ionicons-icon settings-section-link-icon" width="10%" />
                        <Label text="Booking" class="settings-section-link-label" width="85%" />
                        <Label text="&#xf3d1;" class="ionicons-icon settings-section-link-arrow" width="5%" horizontalAlignment="right" />
                    </StackLayout>
                    <Label class="settings-all-divider" />
                    <StackLayout orientation="horizontal" verticalAlignment="center">
                    	<Label text="&#xf101;" class="ionicons-icon settings-section-link-icon" width="10%" />
                        <Label text="Landing Page" class="settings-section-link-label" width="85%" />
                        <Label text="&#xf3d1;" class="ionicons-icon settings-section-link-arrow" width="5%" horizontalAlignment="right" />
                    </StackLayout>
                    <Label class="settings-all-divider" />
                </StackLayout>

            </StackLayout> 

            <StackLayout class="settings-url">
                <StackLayout>
                    <Label text="My URLs" class="settings-section-header" />
                    <Label class="settings-section-divider" />
                </StackLayout>

                <StackLayout class="settings-input-row">
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" />
                </StackLayout>

                <StackLayout class="settings-input-row">
                    <TextField keyboardType="text" autocorrect="false" autocapitalizationType="none" editable="false" />
                </StackLayout>
            </StackLayout>
           
        </StackLayout>
    </ScrollView>
</Page>